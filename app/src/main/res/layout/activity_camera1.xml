<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera1">

    <Button
        android:id="@+id/viewCam1Btn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="View Live Video Feed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cam1stngsBtn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:text="Settings and View Media"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCam1Btn" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="230dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cam1stngsBtn"
        app:layout_constraintVertical_bias="0.376"
        app:srcCompat="@drawable/img_9832" />

</androidx.constraintlayout.widget.ConstraintLayout>